@*@model Logaro.Models.Logaro*@
@using Logaro.Models;
@model IEnumerable<WebApplication>


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <title>Free Search</title>
</head>
<body>
    <div>
        <div style=" background-color: hotpink"><h2 align="center">@ViewData["AppName"] Free Text</h2></div>
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

        <div class="editor-field">
            <div> <h4 align="left">Choose Web Application!</h4></div>
            @Html.DropDownList("WebApplication", ViewData["LogList"] as IEnumerable<SelectListItem>, htmlAttributes: new { style = "width:200px;height:30px" })
            <br />
            <br />
            <br />
            @Html.TextBox("FreeText", "Write your Text Here:", new { @class = "form-control" })<br /><br />
            <input id="app1" type="submit" value="Send Text" />
        </div>
            <br />
            <div style="color:crimson">
                @TempData["Message3"] <br />
                @TempData["Message4"]
            </div>
        }
    </div>
    
</body>
</html>
